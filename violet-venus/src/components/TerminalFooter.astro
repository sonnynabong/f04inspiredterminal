---
interface Props {
  showHints?: boolean;
}

const { showHints = true } = Astro.props;
---

<footer class="bg-[#0c160c] border-t-2 border-[#13ec13]/30 p-2 px-4 flex flex-col sm:flex-row flex-wrap items-center gap-2 shrink-0">
  <div class="flex items-center font-mono text-sm sm:text-base flex-1 min-w-0">
    <span class="mr-2 font-bold text-[#13ec13] shrink-0">ADMIN@TERMINAL:~$</span>
    <input
      type="text"
      id="terminal-input"
      autocomplete="off"
      autofocus
      class="bg-transparent border-none text-[#13ec13] focus:ring-0 p-0 w-full font-mono placeholder-[#13ec13]/50 uppercase min-w-0"
      placeholder="ENTER COMMAND..."
    />
    <span class="w-3 h-5 bg-[#13ec13] ml-1 cursor-blink inline-block shrink-0" aria-hidden="true"></span>
  </div>
  {showHints && (
    <div class="flex gap-4 text-xs font-bold tracking-widest uppercase opacity-70 shrink-0">
      <span class="flex items-center gap-1"><span class="bg-[#13ec13]/20 px-1 rounded">[TAB]</span> NEXT</span>
      <span class="flex items-center gap-1"><span class="bg-[#13ec13]/20 px-1 rounded">[ESC]</span> BACK</span>
    </div>
  )}
</footer>
